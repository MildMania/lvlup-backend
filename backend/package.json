    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "geoip-lite": "^1.4.10",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "openai": "^6.3.0",
    "pg": "^8.17.1",
    "prisma": "^6.16.2",
    "qrcode": "^1.5.4",
    "rate-limiter-flexible": "^9.0.1",
    "redis": "^5.10.0",
    "semver": "^7.7.3",
    "speakeasy": "^2.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.5.2",
