{
  "name": "lvlup-backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:local": "npm run env:local && npm run dev",
    "dev:prod": "npm run env:prod && npm run dev",
    "start": "npx prisma db push --skip-generate && node dist/index.js",
    "start:ts": "ts-node src/index.ts",
    "build": "prisma generate && tsc",
    "generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "ts-node prisma/seed.ts",
    "db:reset": "prisma db push --force-reset && npm run db:seed",
    "setup-auth": "ts-node scripts/setup-auth.ts",
    "postinstall": "prisma generate",
    "deploy": "npm run build",
    "env:local": "cd .. && ./switch-env.sh local",
    "env:prod": "cd .. && ./switch-env.sh production",
    "env:status": "cd .. && ./switch-env.sh status"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@prisma/client": "^6.16.2",
